@model IEnumerable<Project_3_v3.Models.Category>

@{
    ViewBag.Title = "Thể loại nhạc";
    Layout = "~/Areas/AdminShop/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y" ng-controller="Category">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý /</span> Quản lý thể loại nhạc</h4>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="card">
        <h5 class="card-header">Danh sách thể loại nhạc</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CateID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CateName)
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="item in category">

                    <td>
                        {{item.CateID}}
                    </td>
                    <td>
                        {{item.CateName}}
                    </td>
                    <td>
                        <a href="/AdminShop/Categories/Edit/{{item.CateID}}">Sửa</a>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.MaLoaiSa }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id = item.MaLoaiSanPham }) |*@
                        <a href="/AdminShop/Categories/Delete/{{item.CateID}}">Xoá</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>


</div>
    
    <script src="~/Scripts/angular.min.js"></script>
    <script>
        var app = angular.module('Rogost', []);

        app.controller('Category', function ($scope, $http) {
            $scope.category = []
            $http.get("/AdminShop/Categories/Get", null).then(function (result) {
                $scope.category = result.data;
                console.log($scope.category)
            }, function (error) {
                alert("404 Error")
            });
        });
    </script>
