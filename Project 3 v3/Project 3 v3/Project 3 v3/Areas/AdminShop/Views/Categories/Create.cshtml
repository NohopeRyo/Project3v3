@model Project_3_v3.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminShop/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y" ng-controller="Category">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý/Quản lý thể loại nhạc/</span> Tạo thể loại nhạc</h4>
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Thể loại nhạc</h5>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Mã</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-user-plus"></i>
                                </span>
                                <input ng-model="category.CateID" type="text" class="form-control" placeholder="Ma" aria-label="Username" aria-describedby="basic-addon1">
                                @Html.ValidationMessageFor(model => model.CateID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Tên</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text">
                                    <i class="bx bx-music"></i>
                                </span>
                                <input ng-model="category.CateName" type="text" class="form-control" placeholder="Ten" aria-label="Username" aria-describedby="basic-addon1">
                                @Html.ValidationMessageFor(model => model.CateName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <input ng-click="Create()" value="Create" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/angular.min.js"></script>
<script>
    var app = angular.module('Rogost', []);


    app.controller('Category', function ($scope, $http, $window) {

        $scope.category = {}

        $scope.Create = Create;
        function Create() {

            console.log($scope.category)
            $http.post("/AdminShop/Categories/Create", $scope.category).then(function (result) {


                $window.location.href = '/AdminShop/Categories';
            }, function (error) {
                alert("404 Error")
            });
        }
    });
</script>
