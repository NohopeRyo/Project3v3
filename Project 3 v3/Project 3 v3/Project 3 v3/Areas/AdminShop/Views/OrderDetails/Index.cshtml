@model IEnumerable<Project_3_v3.Models.OrderDetail>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/AdminShop/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y" ng-controller="OrderDetails">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý /</span> Quản lý chi tiết đơn hàng</h4>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="card">
        <h5 class="card-header">Danh sách chi tiết đơn hàng</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrdID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>

                    <th></th>
                </tr>
                <tr ng-repeat="item in orderdetails">
                    <td>
                        {{item.OrdID}}
                    </td>
                    <td>
                        {{item.ProID}}
                    </td>
                    <td>
                        {{item.Quantity}}
                    </td>
                    <td>
                        <a href="/AdminShop/OrderDetails/Edit/{{item.OrdID}}" class="btn btn-outline-secondary"><i class="tf-icons bx bx-edit"></i></a>
                        <a href="/AdminShop/OrderDetails/Delete/{{item.OrdID}}" class="btn btn-outline-secondary"> <i class="tf-icons bx bx-trash"></i></a>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/angular.min.js"></script>
<script>
    var app = angular.module('Rogost', []);

    app.controller('OrderDetails', function ($scope, $http) {
        $scope.orderdetails = []
        $http.get("/AdminShop/OrderDetails/Get", null).then(function (result) {
            $scope.orderdetails = result.data;
            console.log($scope.orderdetails)
        }, function (error) {
            alert("404 Error")
        });
    });
</script>
