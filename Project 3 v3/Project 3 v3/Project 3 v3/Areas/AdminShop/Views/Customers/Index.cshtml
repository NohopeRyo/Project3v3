@model IEnumerable<Project_3_v3.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminShop/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y" ng-controller="Customers">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý /</span> Quản lý khách hàng</h4>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="card">
        <h5 class="card-header">Danh sách khách hàng</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CusID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CusName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="item in customers">

                    <td>
                        {{item.CusID}}
                    </td>
                    <td>
                        {{item.CusName}}
                    </td>
                    <td>
                        {{item.Phone}}
                    </td>
                    <td>
                        {{item.Email}}
                    </td>
                    <td>
                        {{item.Address}}
                    </td>
                    <td>
                        <a href="/AdminShop/Categories/Edit/{{item.CusID}}">Sửa</a>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.MaLoaiSa }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id = item.MaLoaiSanPham }) |*@
                        <a href="/AdminShop/Categories/Delete/{{item.CusID}}">Xoá</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>


</div>

<script src="~/Scripts/angular.min.js"></script>
<script>
        var app = angular.module('Rogost', []);

        app.controller('Customers', function ($scope, $http) {
            $scope.customer = []
            $http.get("/AdminShop/Customers/Get", null).then(function (result) {
                $scope.customer = result.data;
                console.log($scope.customer)
            }, function (error) {
                alert("404 Error")
            });
        });
</script>

