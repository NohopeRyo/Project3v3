@model IEnumerable<Project_3_v3.Models.Product>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Areas/AdminShop/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y" ng-controller="Products">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý /</span> Quản lý bài nhạc</h4>
    <a class="btn btn-primary" href="/AdminShop/Products/Create"><i class="bx bx-plus-circle"></i> Thêm mới</a>
    <div class="card">
        <h5 class="card-header">Danh sách sản phẩm nhạc</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CateID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PromotionPrice)
                    </th>

                    <th></th>
                </tr>
                <tr ng-repeat="item in product">
                    <td>
                        {{item.ProID}}
                    </td>
                    <td>
                        {{item.CateID}}
                    </td>
                    <td>
                        {{item.Title}}
                    </td>
                    <td>
                        <img src="{{item.Image}}" style="width:100px" />
                    </td>
                    <td>
                        {{item.Description}}
                    </td>
                    <td>
                        {{item.Quantity}}
                    </td>
                    <td>
                        {{item.Price}}
                    </td>
                    <td>
                        {{item.PromotionPrice}}
                    </td>
                    <td>
                        <a href="/AdminShop/Products/Edit/{{item.ProID}}" class="btn btn-outline-secondary"><i class="tf-icons bx bx-edit"></i></a>
                        <a href="/AdminShop/Products/Delete/{{item.ProID}}" class="btn btn-outline-secondary"> <i class="tf-icons bx bx-trash"></i></a>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script>
    var app = angular.module('Rogost', []);

    app.controller('Products', function ($scope, $http) {
        $scope.product = []
        $http.get("/AdminShop/Products/Get", null).then(function (result) {
            $scope.product = result.data;
            console.log($scope.product)
        }, function (error) {
            alert("404 Error")
        });
    });
</script>


