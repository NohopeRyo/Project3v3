@model Project_3_v3.Models.Provider

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminShop/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y" ng-controller="Providers">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý/Quản lý nhà sản xuất/</span> Tạo thông tin nhà sản xuất</h4>
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Nhà sản xuất</h5>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Mã</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-user-plus"></i>
                                </span>
                                <input ng-model="provider.PrvID" type="text" class="form-control" placeholder="Ma" aria-label="Username" aria-describedby="basic-addon1">

                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.PrvID, "", new { @class = "text-danger" })
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Tên</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text">
                                    <i class="bx bx-user"></i>
                                </span>
                                <input ng-model="provider.PrvName" type="text" class="form-control" placeholder="Ten" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.PrvName, "", new { @class = "text-danger" })
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Địa chỉ</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text">
                                    <i class="bx bx-location-plus"></i>
                                </span>
                                <input ng-model="provider.Address" type="text" class="form-control" placeholder="" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Số điện thoại</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text">
                                    <i class="bx bx-phone"></i>
                                </span>
                                <input ng-model="provider.Phone" type="text" class="form-control" placeholder="number" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Email</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text">
                                    <i class="bx bx-envelope"></i>
                                </span>
                                <input ng-model="provider.Email" type="text" class="form-control" placeholder="gmail.com" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <input ng-click="Create()" value="Create" class="btn btn-primary" />
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script>
    var app = angular.module('Rogost', []);
    app.controller('Providers', function ($scope, $http, $window) {
        $scope.provider = {}
        $scope.Create = Create;
        function Create() {
            console.log($scope.provider)
            $http.post("/AdminShop/Providers/Create", $scope.provider).then(function (result) {
                $window.location.href = '/AdminShop/Providers';
            }, function (error) {
                alert("404 Error")
            });
        }
    });
</script>
