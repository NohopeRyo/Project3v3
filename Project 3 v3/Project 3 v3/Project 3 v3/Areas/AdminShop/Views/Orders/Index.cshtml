@model IEnumerable<Project_3_v3.Models.Order>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/AdminShop/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y" ng-controller="Orders">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản lý /</span> Quản lý đơn hàng</h4>
    <div class="card">
        <h5 class="card-header">Danh sách đơn hàng</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeliveryAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalPay)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer.CusName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDetail.OrdID)
                    </th>
                    <th></th>
                </tr>
                <tr ng-repeat="item in order">
                    <td>
                        {{item.OrderDate}}
                    </td>
                    <td>
                        {{item.DeliveryAddress}}
                    </td>
                    <td>
                        {{item.Status}}
                    </td>
                    <td>
                        {{item.TotalPay}}
                    </td>
                    <td>
                        {{item.CusID}}
                    </td>
                    <td>
                        {{item.OrdID}}
                    </td>
                    <td>
                        <a href="/AdminShop/Orders/Edit/{{item.OrdID}}" class="btn btn-outline-secondary"><i class="tf-icons bx bx-edit"></i></a>
                        <a href="/AdminShop/Orders/Delete/{{item.OrdID}}" class="btn btn-outline-secondary"> <i class="tf-icons bx bx-trash"></i></a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/angular.min.js"></script>
<script>
    var app = angular.module('Rogost', []);

    app.controller('Orders', function ($scope, $http) {
        $scope.order = []
        $http.get("/AdminShop/Orders/Get", null).then(function (result) {
            $scope.order = result.data;
            console.log($scope.order)
        }, function (error) {
            alert("404 Error")
        });
    });
</script>
